def gv

pipeline {
    agent any
    options {
        disableConcurrentBuilds()
        skipDefaultCheckout()
        timeout(time: 1, unit: 'HOURS')
        timestamps()
    }
    triggers {
        cron('@midnight')
    }
    stages {
		stage('clearStage') {
			steps('Clear stage') {
				echo 'clean is started...'
				deleteDir()
				checkout scm
				echo 'clean is finished'
			}
		}
		stage('Check and load groovy file') {
			steps {
				script {
					if (fileExists('demo.groovy')) {
						echo 'groovy found!'
						gv = load "demo.groovy"
						echo 'groovy load successful'
					} else {
						echo 'no groovy file found'
				}	}
			}
		}
        stage('Compile') {
            steps {
				script {
					gv.compile()
				}
            }
        }
		stage('Test') {
            steps {
				echo 'start test'
                withMaven {
                    bat 'mvn test'
                }
				echo 'end test'
            }
        }
    }
}

