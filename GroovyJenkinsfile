def gv

pipeline {
    agent any
    options {
        disableConcurrentBuilds()
        skipDefaultCheckout()
        timeout(time: 1, unit: 'HOURS')
        timestamps()
    }
    triggers {
        cron('@midnight')
    }
    stages {
		stage('Clean') {
			steps('Clean stage') {
				echo 'Cleaning begins...'
				deleteDir()
				checkout scm
				echo 'Cleaning is finished'
			}
		}
		stage('Check and load groovy file') {
			steps {
				script {
					if (fileExists('demo.groovy')) {
						echo 'groovy found!'
						gv = load "demo.groovy"
						echo 'Loading groovy file is successful.'
					} else {
						echo '!!Oops!! I couldn't find the groovy file ¯\\\_(ツ)_/¯ ....'
				}	}
			}
		}
        stage('Compile') {
            steps {
				script {
					gv.print("Compile begins...")
				}
				withMaven {
					bat 'mvn clean compile'
				}
				script {
					gv.print("Compile is finished.")
				}
            }
        }
		stage('Test') {
            steps {
				echo 'Test begins...'
                withMaven {
                    bat 'mvn test'
                }
				echo 'Test is finished.'
            }
        }
    }
}

